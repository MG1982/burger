<div class="container text-center">
    <!--Jumbotron-->
    <div class="jumbotron border border-primary text-white text-center">
        <h1 class="display-4" id="app-title">Eat-Da-Burger</h1>
        <p class="lead">Make a Burger, then eat it.... or not.</p>
    </div>
    <div class="row">
        <div class="col-md-12">
            <div class="card border border-primary">
                <div class="card-header bg-primary text-white">
                    <i class="fas fa-plus"></i> Add a Burger
                </div>

                <div class="card-body">
                    <form class="create-form">
                        <div class="form-group">
                            <div class="col-md-6 mx-auto">
                                <input type="text" class="form-control" id="burgerToGo"
                                    placeholder="Burger name here...">
                            </div>
                        </div>
                        <button class="btn btn-primary" type="submit">Submit</button>
                    </form>
                </div>
            </div>

            <div class="row mt-2">
                <div class="col-md-6 mt-4">
                    <div class="card border border-primary">
                        <div class="card-header bg-primary text-white">
                            <i class="fas fa-hamburger"></i> Ready to Eat!
                        </div>
                        <!-- Ready to eat burgers go here -->
                        <div class="card-body">

                            {{#each burgers}}
                            {{#unless devoured}}
                            {{> burgers/burger-block devour=false}}
                            {{/unless}}
                            {{/each}}

                        </div>
                    </div>
                </div>
                <div class="col-md-6 mt-4">
                    <div class="card border border-primary">
                        <div class="card-header bg-primary text-white">
                            <i class="fas fa-hamburger"></i> Devoured
                        </div>
                        <!--Devoured burgers go here-->
                        <div class="card-body">
                            {{#each burgers}}
                            {{#if devoured}}
                            {{> burgers/burger-devoured devour=true}}
                            {{/if}}
                            {{/each}}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>